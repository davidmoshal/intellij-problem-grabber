<idea-plugin>
    <id>com.github.davidmoshal.problemgrabber</id>
    <name>Problem Grabber</name>
    <vendor>davidmoshal</vendor>
    <description><![CDATA[
    Capture and export code problems at the file, module, or project level.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Problem Grabber"
                           displayType="BALLOON"
                           toolWindowId="Problems"/>
    </extensions>

    <actions>
        <!-- Main Problem Grabber action group -->
        <group id="ProblemGrabber.MainGroup"
               class="com.github.davidmoshal.problemgrabber.actions.CaptureProblemsAction"
               text="Problem Grabber"
               description="Problem Grabber tools"
               popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
